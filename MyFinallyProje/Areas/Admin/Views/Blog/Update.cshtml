
@model Blog


<div class="container">
    <div class="row">
         <div class="col-md-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title"> Update - Blog</h4>
               
                  <form method="post" asp-area="admin" asp-controller="blog" asp-action="update" class="forms-sample">

                    <div class="form-group">
                      <label asp-for="Title" >Title</label>
                      <input default-value="@Model.Title" asp-for="Title" class="form-control" placeholder="Title">
                    </div>
     

                 <button type="submit" class="btn btn-success mr-2">Submit</button>
                 <button asp-controller="blog" asp-action="index" class="btn btn-light">Cancel</button>
                  </form>
                </div>
              </div>
            </div>
    </div>
</div>

