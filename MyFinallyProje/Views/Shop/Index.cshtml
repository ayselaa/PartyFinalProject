   
 @model ShopVM

       <main>
          <div id="carouselExampleSlidesOnly" class="carousel slide d-none" data-ride="carousel">
            <div class="carousel-inner">
                <div class="ttm-page-title-row text-center" style="background: url('./assets/img/contact/contact.jpg')">
                    <div class="title-box text-center"> 
                        <div class="contact-title">
                            <h1>PRODUCTS</h1>
                        </div>
                        <div class="breadcrumb-wrapper">
                          <div class="container">
                              <span><a class="text-white" title="Homepage" href="index.html"><i class="fa fa-home text-white"></i>&nbsp;&nbsp;Home</a></span>
                              <span class="ttm-bread-sep text-white"> &nbsp; ⁄ &nbsp;</span>
                              <span><a title="" href="our-team.html" class="text-white">Shop &nbsp; &nbsp;  Products</a></span>
                          </div>
                      </div>
                    </div>
                </div>
             </div>
          </div>

          <section class="section-products">
            <div class="container">
                <div class="row justify-content-center text-center">
                    <div class="col-md-8 col-lg-6">
                        <div class="header justify-content-center text-aligin-center">
                            <h3>Featured Product</h3>
                            <h2>Popular Products</h2>
                        </div>
                    </div>
                </div>
                <div class="row">


                    @foreach (var product in Model.Products)
                   {
                       
                    <div class="col-md-6 col-lg-4 col-xl-3">
                        <div id="product-1" class="single-product">
                            @foreach (var img in product.ProductImage)
                           {
                            <div class="part-1" style="background:  url('./assets/uploads/images/@img.Image.Url')">
                                <ul>
                                        <li><a asp-controller="Shop" asp-action="Detail" asp-route-id="@product.Id"><i class="fas fa-shopping-cart"></i></a></li>
                                    <li><a ><i class="fas fa-plus"></i></a></li>
                                </ul>
                            </div>
                           }
                            <div class="part-2">
                                <a> <h3 class="product-title text-center">@product.Title</h3></a>
                               

                                <h4 class="product-old-price text-danger">$90.99</h4>
                                <h4 class="product-price text-danger">$@product.Price</h4>
                            </div>
                        </div>
                    </div>

                   }

                </div>
            </div>
        </section>

        </main>
